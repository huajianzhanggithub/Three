<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link rel="stylesheet" asp-href-include="css/*" asp-href-exclude="css/all.min.css" />
    </environment>
    <environment exclude="Development">
        <link  rel="stylesheet" asp-href-include="css/all.min.css"/>
    </environment>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center">
            <div>
                <img asp-append-version="true" src="~/images/logo.png" alt="Logo" style="height:60px" />
            </div>
            <div class="align-self-center">
                <span class="h2">@ViewBag.Title</span>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
